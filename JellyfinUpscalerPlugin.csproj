<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <AssemblyVersion>1.3.1.0</AssemblyVersion>
    <FileVersion>1.3.1.0</FileVersion>
    <Version>1.3.1</Version>
    <AssemblyName>JellyfinUpscalerPlugin</AssemblyName>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <AssemblyTitle>AI Upscaler Plugin</AssemblyTitle>
    <AssemblyDescription>AI-powered video upscaling with GPU acceleration</AssemblyDescription>
    <AssemblyCompany>Kuschel-code</AssemblyCompany>
    <AssemblyProduct>Jellyfin AI Upscaler Plugin</AssemblyProduct>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Jellyfin.Controller" Version="10.8.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Configuration\**" />
    <EmbeddedResource Include="web\**" />
    <EmbeddedResource Include="assets\**" />
  </ItemGroup>

  <ItemGroup>
    <None Include="thumb.jpg" CopyToOutputDirectory="Always" />
    <None Include="meta.json" CopyToOutputDirectory="Always" />
  </ItemGroup>

</Project>